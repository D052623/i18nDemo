<mvc:View
	xmlns="sap.m"
	xmlns:mvc="sap.ui.core.mvc"
	controllerName="sap.ui.demo.i18n.controller.App">
	<Panel headerText="{i18n>panelHeaderText}" class="sapUiResponsiveMargin" width="auto">
		<content>
			<Label text="{i18n>firstName}" class="sapUiSmallMargin"/>
			<Input value="{data>/firstName}" valueLiveUpdate="true" width="200px" enabled="{data>/enabled}"/>
			<Label text="{i18n>lastName}" class="sapUiSmallMargin"/>
			<Input value="{data>/lastName}" valueLiveUpdate="true" width="200px" enabled="{data>/enabled}"/>
			<CheckBox selected="{data>/enabled}" text="{i18n>enabled}"/>
		</content>
	</Panel>
</mvc:View>
